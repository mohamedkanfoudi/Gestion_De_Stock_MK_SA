<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Creation</servlet-name>
        <servlet-class>servlets.Creation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreationProduit</servlet-name>
        <servlet-class>servlets.CreationProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListingProduit</servlet-name>
        <servlet-class>servlets.ListingProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuppressionProduit</servlet-name>
        <servlet-class>servlets.SuppressionProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificationProduit</servlet-name>
        <servlet-class>servlets.ModificationProduit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Creation</servlet-name>
        <url-pattern>/Creation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreationProduit</servlet-name>
        <url-pattern>/CreationProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListingProduit</servlet-name>
        <url-pattern>/ListingProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuppressionProduit</servlet-name>
        <url-pattern>/SuppressionProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificationProduit</servlet-name>
        <url-pattern>/ModificationProduit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
